{
	"builders":
	[
		{
			"type": "lxc",
			"target_runlevel": 2,
			"container_name": "androidsdk64-builder",
			"config_file": "lxc.config",
			"init_timeout": "120s",
			"template_parameters":
			[
				"-d", "ubuntu",
				"-r", "trusty",
				"-a", "amd64"
			],
			"template_name": "ubuntu",
			"export_name": "androidsdk64.tar.gz",
			"export_folders": ["/tmp/android-sdk-linux", "/tmp/.android"]
		}
	],
	"provisioners":
	[
		{
      "destination":"/tmp/ansible",
      "type":"file",
      "source":"ansible"
    },
		{
			"type": "shell",
			"inline":
			[
				"mkdir /tmp/android-sdk-linux",
				"mkdir /tmp/.android"
			]
		}
	]
}
